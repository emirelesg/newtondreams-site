{
  "env": {
    "browser": true,
    "jquery": true
  },
  "parserOptions": {
    "ecmaVersion": 5
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "globals": {
    "p$": "readonly"
  },
  "rules": {
    "prettier/prettier": [
      "warn", {
        "singleQuote": true,
        "printWidth": 80,
        "tabWidth": 2,
        "trailingComma": "none",
        "arrowParens": "avoid"
      }
    ],
    "no-console": "off",
    "quotes": [2, "single", {
      "avoidEscape": true,
      "allowTemplateLiterals": true
    }]
  }
}
